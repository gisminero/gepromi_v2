                <field name="oficina_destino"  attrs="{'readonly':[('state','!=', 'draft')]}"/>
<field name="observ_pase" attrs="{'readonly':[('state','!=', 'draft')]}"/>


          <field name="user_creador_id" string="Creador por"/>
